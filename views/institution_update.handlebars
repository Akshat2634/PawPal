<link rel="stylesheet" href="/public/css/loginstyles.css" />

<form
  action="/institution_register/update/{{institution_current_data.id}}"
  method="POST"
  name="institute_form_update"
  id="institute_form_update"
>
  <label for="name">Name:</label><br />
  <input
    type="text"
    id="institute_name"
    name="name"
    value="{{institution_current_data.name}}"
  /><br /><br />

  <label for="email">Email:</label><br />
  <input
    type="email"
    id="institute_email"
    name="email"
    value="{{institution_current_data.email}}"
    readonly
  /><br /><br />

  <label for="services">Services:</label><br />
  <select
    id="services"
    name="services[]"
    multiple
    value="{{institution_current_data.services}}"
  >
    <option value="Grooming Services">Grooming Services</option>
    <option value="Training and Behavior Modification">Training and Behavior
      Modification</option>
    <option value="Veterinary Services">Veterinary Services</option>
    <option value="Daycare">Daycare</option>
    <option value="Pet Sitting and Walking">Pet Sitting and Walking</option>
  </select>
  <br /><br />

  <label for="address">Address:</label><br />
  <input
    type="text"
    id="address"
    name="address"
    value="{{institution_current_data.address}}"
  /><br /><br />

  <label for="city">City:</label><br />
  <input
    type="text"
    id="institute_city"
    name="city"
    value="{{institution_current_data.city}}"
  /><br /><br />

  <label for="state">State</label>
  <select
    id="institute_state"
    name="state"
    value="{{institution_current_data.state}}"
  >
