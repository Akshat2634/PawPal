<link rel="stylesheet" href="/public/css/loginstyles.css" />

<div class="container">
  <h1 class="text-center">Password Reset</h1>

  <form action="/forgotPassword/update-password" method="POST" class="mt-5" id="reset-password-form">
    <div class="form-group">
      <input type="hidden" name="email" value="{{email}}" />
      <label for="new-password">New Password:</label>
      <input
        type="password"
        id="new-password"
        name="newPassword"
        class="form-control"
        
      />
    </div>

    <div class="form-group">
      <label for="confirm-password">Confirm Password:</label>
      <input
        type="password"
        id="confirm-password"
        name="confirmPassword"
        class="form-control"
        
      />
    </div>

    <button type="submit" class="btn btn-primary">Reset Password</button>
  </form>
  <div id="error-reset-password"></div>
  <script src="/public/js/client_validation.js"></script>
</div>