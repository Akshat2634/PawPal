<link rel="stylesheet" href="/public/css/loginstyles.css" />
<div class="container">
  <h3>User Forgot Password</h3>
  <form action="/forgotPassword/user" method="POST" id="forgot-password-form">
    <label for="email">Enter your registered email address:</label>
    <input type="email" id="email" name="email" />

    <input type="submit" value="Submit" />
  </form>
  <div id="error-forgot-password"></div>
  {{#if error}}
    <p class="error-institution-user">{{error}}</p>
  {{/if}}
</div>
<script src="/public/js/client_validation.js"></script>