
<form action="/pets/update/{{petID}}" method="POST">
        <label for="name">Name:</label><br>
        <input type="text" id="name" name="name" value = "{{pet_current_data.name}}" required><br><br>

        <label for="species">Species:</label><br>
        <input type="text" id="species" name="species" value = "{{pet_current_data.species}}" required><br><br>

        <label for="breed">Breed:</label><br>
        <input type="text" id="breed" name="breed"value = "{{pet_current_data.breed}}" required><br><br>

        <label for="description">Description:</label><br>
        <textarea id="description" name="description" rows="4" cols="50"required>{{pet_current_data.description}}</textarea><br><br>


        <input type="submit" value="Submit">
    </form>