<body>
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center">
      <!-- Dropdown Button -->
      <div class="dropdown">
        <button
          class="btn btn-secondary dropdown-toggle"
          type="button"
          id="dropdownMenuButton"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          General
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <li><a class="dropdown-item" href="/posts/general">General</a></li>
          <li><hr class="dropdown-divider" /></li>
          <li><a class="dropdown-item" href="/posts/lost">Lost</a></li>
          <li><hr class="dropdown-divider" /></li>
          <li><a class="dropdown-item" href="/posts/found">Found</a></li>
        </ul>
      </div>
      <strong>Community</strong>
      <div class="btn-group" role="group" aria-label="Post Actions">
        <a
          class="btn btn-secondary btn-group"
          href="/posts/myposts"
          role="button"
          aria-disabled="true"
        >My Posts</a>
        <a
          class="btn btn-secondary btn-group"
          href="/posts/add"
          role="button"
          aria-disabled="true"
          style="margin-left: 5px"
        >Add Post</a>
        <a
          class="btn btn-secondary btn-group"
          href="/posts/search"
          role="button"
          aria-disabled="true"
          style="margin-left: 5px"
        >Search</a>
      </div>
    </div>
  </div>

  <input type="text" id="searchInput" placeholder="Search..." />
  <div id="searchResults"></div>

  <script
    src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
  ></script>
  <script src="/public/js/posts_clientvalidations.js"></script>
</body>